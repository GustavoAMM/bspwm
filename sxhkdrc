# Terminal emulator
super + Return
	kitty
	
# Navegador
super + w
  brave

# Navegador Incognito
super + shift + w
  brave --incognito

# Explorador de archivos
super + e
  Thunar

# hide
super + h
	HideBar -h

# unhide
super + u 
	HideBar -u

# screenshoots
super + Print
  flameshot full
 
# Bloquear la pantalla
 super + l
  betterlockscreen -l

# Apagar, Reiniciar, Cerrar Sesion, bloquear
ctrl + super + alt + {p,r,q}
  {systemctl poweroff, systemctl reboot,bspc quit}

# Matar Procesos
super + Escape
	{xkill}

# Menu aplicaciones
super + d
	rofi -no-lazy-grab -show drun -theme $HOME/.config/bspwm/rices/$RICETHEME/launcher.rasi
	
# Theme Selector
alt + @space
	RiceSelector

# Reload sxhkd
super + p
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'El archivo de configuracion se ha recargado con exito'
	
# Random wallpaper
#super + alt + {Left,Right}
#	RandomWall

# Reiniciar BSPWM
super + r
	bspc wm -r

# close and kill
super + q
	bspc node -{c,k}

# rotate desktop
super + shift + r
	bspc node @/ --rotate {90,-90}

# Circulate the leaves of the tree
super + shift + c
	bspc node @/ --circulate {backward,forward}

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
#super + shift + {Left,Down,Up,Right}
#	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# contract a window by moving one of its side inward
#super + shift + {h,j,k,l}
#	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

## Media keys
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +10%

XF86AudioLowerVolume
	pactl set-sink-volume 0 -10%

XF86AudioMute
	pactl set-sink-mute 0 toggle

super + F11
  brightnessctl set 10%- -q

super + F12
  brightnessctl set 10%+ -q

super + {_,shift + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}

